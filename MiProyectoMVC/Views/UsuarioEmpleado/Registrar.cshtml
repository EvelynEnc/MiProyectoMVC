@model MiProyectoMVC.Models.UsuarioEmpleadoModel

@{
    ViewBag.Title = "Registro de Empleados";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro de Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f0f0f0;
            font-family: 'Arial', sans-serif;
            padding: 40px;
        }

        .form-container {
            background: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="mb-4">Registrar Nuevo Empleado</h2>

        @using (Html.BeginForm("Registrar", "UsuarioEmpleado", FormMethod.Post))


        {
            <div class="mb-3">
                @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.username, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.fechanacimiento, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.fechanacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "form-label" })
                @Html.TextBoxFor(model => model.email, new { @class = "form-control", type = "email" })
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="@Url.Action("Lista", "Empleado")" class="btn btn-secondary">Cancelar</a>
        }
    </div>
</body>
</html>
